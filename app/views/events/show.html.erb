<div class="event-show">
<div class="container">
  <div class="row">
    <div class="col-xs-3 col-md-3">
     <div class="card section-photo"
    style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
           url('<%= cl_image_path @hobby.photos.first.path, height: 300, width: 400, crop: :fill %>')">
     <%= @hobby.title %>
    </div>

      <div class="section-details">
        <h3> Main info</h3>
        <h3> </h3>
        <ul class="b">
        <li><strong>Price:</strong> <%= @event.price %> RMB</li>
        <li><strong> Start Time: </strong> <%= @event.start_time.strftime("%d/%m/%Y at %I:%M%p") %></li>
        <li><strong> End Time:</strong> <%= @event.end_time.strftime("%d/%m/%Y at %I:%M%p") %></li>
        <li><strong> Minimum number of participants: </strong><%= @event.min_pax %></li>
        <li> <strong>Maximum number of participants:</strong> <%= @event.max_pax %></li>
        </ul>
      </div>
    </div>

    <div class="col-xs-9 col-md-9 section-attendees">
     <h3 class="text-center">Our fellows list:</h3>
     <br />
     <%= render 'table_event' %>
    </div>
  </div>
  <div class="row">

      <div class="col-xs-12 col-md-12 section-button ">
          <%= link_to("Hobby main",hobby_path(@hobby), class: "btn btn-primary card-link") %>
          <% if policy(@hobby).edit? %>
            <%= link_to("Edit event",edit_hobby_event_path(@hobby, @event), class: "btn btn-primary card-link") %>
            <%= link_to("Create another event",new_hobby_event_path(@hobby), class: "btn btn-success card-link") %>
          <% end %>
      </div>
  </div>
</div>
</div>
