
<div class="section-space">
</div>
  

<div class="container text-center">
 <div class="row">

  <div class="col-xs-12 col-sm-12 section-big-title">
  <br>
    <% if  @user.photo %>
      <%= cl_image_tag @user.photo.path, width: 100, height: 100, crop: :fill, class: "img-circle profile_picture"%>
    <% elsif @user.facebook_picture_url %>
      <img src="<%= @user.facebook_picture_url %>", class="img-circle profile_picture" >
    <% end %>
    <h2><%= @user.first_name %> <%= @user.last_name %></h2>
  </div>
  <div class="col-xs-12 col-sm-12 section-specifications">
    <ul class="list-inline">
      <li><strong>Gender:</strong></li>
      <li><%= @user.gender %></li>
    </ul>
    <ul class="list-inline">
      <li> <strong>Birthdate:</strong></li>
      <li> <%= @user.birthdate %></li>
    </ul>
  </div>
  <div class="col-xs-12 col-sm-12 wrapper-icones">
    <ul class="list-inline">
    	<li><a><i class="fa fa-phone" aria-hidden="true"></i></a></li> <%= @user.phone_number %>
    	<li><a><i class="fa fa-at" aria-hidden="true"></i></a></li> <%= @user.email %>
      <li><a><i class="fa fa-weixin wechat"  aria-hidden="true"></i></a></li> <%= @user.wechat_id %>
    </ul>
  </div>
  <div class="col-xs-12 col-sm-12 wrapper-bio">
	  <h3 class="bio section-title">
      <div class="section-title-content">BIO</div>
    </h3>
    <div class="bio-frame">
      <%= @user.bio %>
    </div>
  </div>
 </div>
</div>

<p class="text-center" style="padding-top:40px; padding-bottom:80px;">
<%= link_to('Edit Profile', edit_profile_path, { class: "btn btn-green" })%>
</p>



