<div class="container text-center" style="margin-top: 150px;">
  <div class="owl-carousel owl-theme">
    <% @categories.each do |category| %>
      <h3> <%= category.name %> </h3>
        <%= link_to("More like this", category_path(category), class: "btn btn-primary card-link") %>
    <% end %>

